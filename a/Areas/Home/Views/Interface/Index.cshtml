@model IEnumerable<Modeloa.Cadastros.Produto>
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    ViewBag.Title = "Interface";
}

<!DOCTYPE html>

<div class="panel panel-primary">
    <div class="panel-heading">
        Relação de Categorias registrados
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoriaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria.Nome)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoriaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.Nome)
                        </td>
                        <td>
                            @Html.ActionLink("Detalhes", "DetailsCategoria", new { id = item.CategoriaId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        Relação de Produtos Promocionais registrados
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Imagem
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProdutoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Percentual != 0)
                    {

                        <tr>
                        @if (item.Logotipo != null)
                            {
                                <td>
                                     <img class="img-thumbnail" src="@Url.Action("GetLogotipo", "Interface", new { id = item.ProdutoId })" style="display:block;margin-left:auto; margin-right:auto; width:50px; height:50px;"  />
                                </td>
                            }
                            else 
                            {
                                <td>
                                    Sem imagem
                                </td>
                            }
                        <td>
                            @Html.DisplayFor(modelItem => item.ProdutoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.ActionLink("Detalhes", "DetailsProduto", new { id = item.ProdutoId })
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        Relação de Lançamentos registrados
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Imagem
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProdutoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Lançamento == true) {
                    <tr>
                        @if (item.Logotipo != null)
                            {
                                <td>
                                      <img class="img-thumbnail" src="@Url.Action("GetLogotipo", "Interface", new { id = item.ProdutoId })" style="display:block;margin-left:auto; margin-right:auto; width:50px; height:50px;"  />
                                </td>
                            }
                            else 
                            {
                                <td>
                                    Sem imagem
                                </td>
                            }
                        <td>
                            @Html.DisplayFor(modelItem => item.ProdutoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.ActionLink("Detalhes", "DetailsProduto", new { id = item.ProdutoId })
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@section styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")"
          rel="stylesheet">
}
@section ScriptPage {
    <script src=" @Url.Content("~/scripts/DataTables/jquery. dataTables.js")">
    </script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")">
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liHome').addClass("active");
            $('.table').dataTable({
                "order": [[1, "asc"]]
            });
        });
    </script>
}
